<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ongap" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBackground</item>
        <item name="colorPrimaryVariant">@color/primaryBackground</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleActivity">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/rubik_semi_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TilLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="TilLoginPwd" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="LightThemeSelector" parent="android:Theme.Holo.Light">
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>
</resources>